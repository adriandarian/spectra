# EditorConfig - https://editorconfig.org
# Consistent coding styles across editors and IDEs

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python
[*.py]
indent_size = 4
max_line_length = 100

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# JavaScript/TypeScript
[*.{js,ts,tsx,jsx}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Go
[*.go]
indent_style = tab

# Terraform
[*.tf]
indent_size = 2

# Lua
[*.lua]
indent_size = 2

# TOML
[*.toml]
indent_size = 4

