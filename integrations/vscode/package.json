{
  "name": "spectra",
  "displayName": "spectra",
  "description": "Sync markdown documentation with Jira - validate, preview, and sync stories directly from VS Code",
  "version": "1.0.0",
  "publisher": "spectra",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/spectra"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "jira",
    "markdown",
    "sync",
    "agile",
    "documentation"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "workspaceContains:**/*.md"
  ],
  "main": "./out/extension.js",
  "icon": "media/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "spectra.validate",
        "title": "Validate Markdown",
        "category": "spectra",
        "icon": "$(check)"
      },
      {
        "command": "spectra.sync",
        "title": "Sync to Jira (Dry Run)",
        "category": "spectra",
        "icon": "$(sync)"
      },
      {
        "command": "spectra.syncExecute",
        "title": "Sync to Jira (Execute)",
        "category": "spectra",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "spectra.dashboard",
        "title": "Show Dashboard",
        "category": "spectra",
        "icon": "$(dashboard)"
      },
      {
        "command": "spectra.init",
        "title": "Setup Wizard",
        "category": "spectra",
        "icon": "$(gear)"
      },
      {
        "command": "spectra.generate",
        "title": "Generate Template from Jira",
        "category": "spectra",
        "icon": "$(file-add)"
      },
      {
        "command": "spectra.gotoStory",
        "title": "Go to Story",
        "category": "spectra",
        "icon": "$(symbol-class)"
      },
      {
        "command": "spectra.copyStoryId",
        "title": "Copy Story ID",
        "category": "spectra"
      },
      {
        "command": "spectra.openInJira",
        "title": "Open in Jira",
        "category": "spectra",
        "icon": "$(link-external)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "spectra.validate",
          "when": "resourceLangId == markdown",
          "group": "navigation@1"
        },
        {
          "command": "spectra.sync",
          "when": "resourceLangId == markdown",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "command": "spectra.copyStoryId",
          "when": "resourceLangId == markdown",
          "group": "spectra@1"
        },
        {
          "command": "spectra.openInJira",
          "when": "resourceLangId == markdown",
          "group": "spectra@2"
        }
      ],
      "commandPalette": [
        {
          "command": "spectra.validate",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "spectra.sync",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "spectra.syncExecute",
          "when": "resourceLangId == markdown"
        }
      ]
    },
    "configuration": {
      "title": "spectra",
      "properties": {
        "spectra.executable": {
          "type": "string",
          "default": "spectra",
          "description": "Path to spectra executable"
        },
        "spectra.jiraUrl": {
          "type": "string",
          "default": "",
          "description": "Jira instance URL (e.g., https://your-org.atlassian.net)"
        },
        "spectra.autoValidate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically validate markdown on save"
        },
        "spectra.showStoryDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Show inline decorations for stories"
        },
        "spectra.showCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens above stories"
        },
        "spectra.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show story count in status bar"
        }
      }
    },
    "colors": [
      {
        "id": "spectra.storyIdColor",
        "description": "Color for story IDs",
        "defaults": {
          "dark": "#4EC9B0",
          "light": "#008080",
          "highContrast": "#4EC9B0"
        }
      },
      {
        "id": "spectra.epicIdColor",
        "description": "Color for epic IDs",
        "defaults": {
          "dark": "#DCDCAA",
          "light": "#795E26",
          "highContrast": "#DCDCAA"
        }
      }
    ],
    "keybindings": [
      {
        "command": "spectra.validate",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == markdown"
      },
      {
        "command": "spectra.sync",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "resourceLangId == markdown"
      },
      {
        "command": "spectra.gotoStory",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "resourceLangId == markdown"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "spectraStories",
          "name": "spectra Stories",
          "when": "resourceLangId == markdown",
          "icon": "$(list-unordered)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}

